<Window x:Class="dhamo.zavatta._4H.Tris2.Schermata1vs1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dhamo.zavatta._4H.Tris2"
        mc:Ignorable="d"
         Title="Login" Height="500" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid>
        <Rectangle Height="280" VerticalAlignment="Top">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="SlateBlue"></GradientStop>
                    <GradientStop Color="SlateGray" Offset="1"></GradientStop>
                    <GradientStop Color="DarkGray" Offset="0.5"></GradientStop>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Width="300" Height="200" Fill="White">
            <Rectangle.Effect>
                <DropShadowEffect Color="White" Direction="0" BlurRadius="10" RenderingBias="Quality"/>
            </Rectangle.Effect>
        </Rectangle>
        <Grid Width="280" Height="240" VerticalAlignment="Bottom" Margin="35,0,35,100">
            <TextBlock Text="Nome dei due giocatori" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="Gray" FontSize="18"></TextBlock>
            <StackPanel VerticalAlignment="Center" Margin="10,70,10,50" Height="120">
                <TextBlock Margin="30,0,135,0" Text="Giocatore1" Foreground="Gray" FontSize="18" ></TextBlock>
                <TextBox x:Name="g1" Text="" Width="200" Height="20" Margin="30,0"/>
                <TextBlock Margin="30,0,135,0" Text="Giocatore2" Foreground="Gray" FontSize="18" ></TextBlock>
                <TextBox x:Name="g2" Text="" Width="200" Height="20" Margin="30,0"></TextBox>
            </StackPanel>
        </Grid>
        <TextBlock Margin="25,14,35,436" Text="GIOCO DEL TRIS" Foreground="White" FontSize="38" VerticalAlignment="Center" HorizontalAlignment="Center" Width="290" Height="50" FontWeight="Bold"></TextBlock>


        <Button Foreground="Gray" VerticalAlignment="Bottom" Margin="0,85" Width="150" Content="AVANTI" Click="Button_Click"></Button>
        <Button Foreground="Gray" VerticalAlignment="Bottom" Margin="100,0,100,45" Width="150" Content="Home Page" Click="Button_Click_1"></Button>



    </Grid>
</Window>
